{% extends "layout.html.twig" %}

{% block body %}

    <!--- loading animation -->
    <div class="loading">
        <div class="ball"></div>
        <div class="ball1"></div>
    </div>
    <!--- //loading animation -->

    <main class="main">
        <!--breadcrumbs-->
        <nav class="breadcrumbs">
            <!--crumbs-->
            <ul>
                <li><a href="#" title="Home">Home</a></li>

            </ul>
            <!--//crumbs-->
        </nav>
        <!--//breadcrumbs-->

        <div class="row">
            <!--three-fourth content-->




            <!--inner navigation-->
            <nav class="inner-nav">
                <ul>
                    <li><a href="#general_info" title="General information">General information</a></li>
                </ul>
            </nav>
            <!--//inner navigation-->

            <!--General information-->

            {% for Evenement in pagination %}
                <article>
                    <table  class="table table-striped table-bordered table-hover ">

                        <tr>


                            <th>Titre</th>
                            <th>Adresse</th>
                            <th>Date</th>
                            <th>Prix</th>
                            <th width="20">Description</th>
                            <th>nbPlace</th>
                            <th>Image</th>
                            <th></th>
                            <th></th>
                        </tr>

                        <tbody>


                        <tr>

                            <td>{{ Evenement.titre }}</td>
                            <td>{{ Evenement.lieu}}</td>
                            <td>{{ Evenement.date|date("d M, Y") }}</td>
                            <td>{{ Evenement.prix }}</td>
                            <td>{{ Evenement.description }}</td>
                            <td>{{ Evenement.nbPlace }}</td>

                            <td><div class="all_members_item">
                                    <img width="150" height="150" src="{{ asset('images/evenement/'~Evenement.image)}}" alt="{{ Evenement.image }}" />
                                </div>
                            </td>
                            <td align="center">
                                <a  class="btn btn-app btn-primary" href="{{ path('Event_edit', { 'idevent': Evenement.idevent }) }}">

                                    <i class="ace-icon fa fa-pencil-square-o bigger-230"></i>
                                    Modifier
                                </a>
                            </td>
                            <td align="center">
                                <a href="{{ path('Event_Supp', { 'idevent': Evenement.idevent }) }}"><button class="btn btn-app btn-danger">
                                        <i class="ace-icon fa fa-trash-o bigger-230"></i>
                                        Supprimer
                                    </button></a>
                            </td>
                        </tr>

                        </tbody>
                    </table>


                </article>


            {% endfor %}
            <div class="pagination pagination" align="center">
                {{ knp_pagination_render(pagination) }}

            </div>

        </div>

    </main>
    <!--//main-->
{% endblock %}